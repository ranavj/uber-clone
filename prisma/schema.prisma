// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// üë§ 1. Rider (User)
model User {
  id        String   @id @default(uuid())
  firstName String
  lastName  String
  email     String   @unique
  password  String
  role      String   @default("rider") // 'rider' or 'admin'
  rating    Float    @default(5.0)

  // Relations
  rides     Ride[]   @relation("RiderRides") // User ki rides history
  
  // üÜï Relation: User ka apna Wallet
  wallet    Wallet?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// üöï 2. Driver (Alag Table with Car Details)
model Driver {
  id        String   @id @default(uuid())
  firstName String
  lastName  String
  email     String   @unique
  password  String
  phone     String?
  
  // Car Details
  carModel  String   // e.g. "Swift Dzire"
  carNumber String   // e.g. "DL 3C 1234"
  carType   String   // e.g. "uber_go", "moto"
  
  isOnline  Boolean  @default(false)
  rating    Float    @default(4.8)
  
  // Relations
  rides     Ride[]   @relation("DriverRides") 

  // üÜï Relation: Driver ka apna Wallet
  wallet    Wallet?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// üõ£Ô∏è 3. Ride (Trip Details)
model Ride {
  id         String   @id @default(uuid())
  
  // Locations
  pickupLat  Float
  pickupLng  Float
  dropLat    Float
  dropLng    Float
  pickupAddr String
  dropAddr   String

  price      Float
  status     String   @default("SEARCHING") 
  
  // Relations
  riderId    String
  rider      User     @relation("RiderRides", fields: [riderId], references: [id])
  
  driverId   String?  
  driver     Driver?  @relation("DriverRides", fields: [driverId], references: [id])

  // üÜï Payment & Earnings Logic
  driverEarnings Float?        // Driver ko kitna mila (Commission kat ke)
  platformFee    Float?        // Humara commission
  paymentStatus  PaymentStatus @default(PENDING) // Naya Enum
  paymentMode    PaymentMode   @default(WALLET)  // Naya Enum

  // üÜï Is Ride se jude Transactions (Rider ka deduction + Driver ka credit)
  transactions   Transaction[]

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

// ---------------------------------------------------------
// üÜï 4. NEW MODELS (Wallet & Payment System)
// ---------------------------------------------------------

// üí∞ Wallet
model Wallet {
  id        String   @id @default(uuid())
  // ‚ö†Ô∏è CHANGE: Float hataya, Int lagaya (Store in Paise)
  balance   Int      @default(0) 
  currency  String   @default("INR")
  
  userId    String?  @unique
  user      User?    @relation(fields: [userId], references: [id])
  driverId  String?  @unique
  driver    Driver?  @relation(fields: [driverId], references: [id])

  transactions Transaction[]
  
  // üîí Optimistic Concurrency Control (Optional, but good)
  version   Int      @default(0) 

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// üìí Transaction
model Transaction {
  id          String      @id @default(uuid())
  amount      Int         // ‚ö†Ô∏è CHANGE: Int (Paise)
  type        TxType      
  category    TxCategory  
  status      TxStatus    @default(PENDING)
  
  description String?     
  externalId  String?     
  
  walletId    String
  wallet      Wallet      @relation(fields: [walletId], references: [id])
  
  rideId      String?
  ride        Ride?       @relation(fields: [rideId], references: [id])

  createdAt   DateTime    @default(now())
}

// ---------------------------------------------------------
// üÜï 5. ENUMS (Fixed Values for Consistency)
// ---------------------------------------------------------

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

enum PaymentMode {
  WALLET
  CASH
  ONLINE // Direct Gateway
}

enum TxType {
  CREDIT  // Paisa Aaya (+)
  DEBIT   // Paisa Gaya (-)
}

enum TxCategory {
  WALLET_TOPUP    // Rider adds money
  RIDE_PAYMENT    // Rider pays for ride
  RIDE_EARNING    // Driver earns from ride
  WITHDRAWAL      // Driver takes money out
  REFUND          // Cancelled ride refund
}

enum TxStatus {
  PENDING
  SUCCESS
  FAILED
}