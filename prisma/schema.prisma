generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// üë§ 1. Rider (User)
model User {
  id        String   @id @default(uuid())
  firstName String
  lastName  String
  email     String   @unique
  password  String
  role      String   @default("rider") // 'rider' or 'admin'
  rating    Float    @default(5.0)

  // Relations
  rides     Ride[]   @relation("RiderRides") // User ki rides history

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// üöï 2. Driver (Alag Table with Car Details)
model Driver {
  id        String   @id @default(uuid())
  firstName String
  lastName  String
  email     String   @unique
  password  String
  phone     String?
  
  // Car Details
  carModel  String   // e.g. "Swift Dzire"
  carNumber String   // e.g. "DL 3C 1234"
  carType   String   // e.g. "uber_go", "moto"
  
  isOnline  Boolean  @default(false)
  rating    Float    @default(4.8)
  
  // Relations
  rides     Ride[]   @relation("DriverRides") 

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// üõ£Ô∏è 3. Ride (Trip Details)
model Ride {
  id        String   @id @default(uuid())
  
  // Locations (JSON ya String format mein store kar sakte hain)
  pickupLat  Float
  pickupLng  Float
  dropLat    Float
  dropLng    Float
  pickupAddr String
  dropAddr   String

  price      Float
  status     String   @default("SEARCHING") // SEARCHING, ACCEPTED, STARTED, COMPLETED, CANCELLED
  
  // Relations: Ride kisne book ki aur kaun chala raha hai
  riderId    String
  rider      User     @relation("RiderRides", fields: [riderId], references: [id])
  
  driverId   String?  // Driver baad mein assign hoga, isliye Optional (?)
  driver     Driver?  @relation("DriverRides", fields: [driverId], references: [id])

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}